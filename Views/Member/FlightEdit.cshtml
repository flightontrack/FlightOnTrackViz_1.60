@model MVC_Acft_Track.Models.Flight

@{
    var menuitem = 2;
    var successFlg = ViewBag.successFlg;
    string msg = ViewBag.Msg;
}

<br>
<div class="row">
    @Html.Partial("_MemberMenu", new { menuitem = menuitem })
    <div class="col-sm-5 col-sm-offset-1">
    <h2>
        Flight:  @Html.DisplayFor(model => model.FlightID)
    </h2>
        <div class="table-responsive">
            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.FlightID)
            @Html.Hidden("menuitem", menuitem)
                    <table class="table table-striped table-condensed">
                        <colgroup> <col class="col-md-2"> <col class="col-md-3"> </colgroup>
                        @*<thead> <tr> <th class="info">Class</th> <th class="info">Description</th> </tr> </thead>*@
                        <tbody>
                            <tr> <th scope="row"> Flight/Arpt </th> <td>@Html.EditorFor(model => model.FlightName)</td></tr>
                            <tr> <th scope="row"> Comments </th> <td>@Html.EditorFor(model => model.Comments)</td> </tr>
                            <tr> <th scope="row"> Aircraft </th> <td>@Html.DropDownList("AircraftsSelList") </td> </tr>
                        </tbody>
                    </table>
            <p>
                <input type="submit" class="btn btn-default active" value="Save Changes" />
            </p>
                if (successFlg != null)
                {
                    if ((bool)successFlg)
                    {<i>@msg</i> }
                    else if (!(bool)successFlg)
                    {
                        <div class="validation-summary-errors text-danger"> @msg  </div>
                    }
                }
            }
        </div>
    </div>
</div>


