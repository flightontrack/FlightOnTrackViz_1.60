@model MVC_Acft_Track.Models.Pilot
@{
    int menuitem = 1;
    var successFlg = ViewBag.successFlg;
    string msg = ViewBag.Msg;
    var msgArpt = Html.Raw(ViewBag.MsgArpt);
    var aiprtList = ViewBag.AirportList;
    string chbxValue = Model.IsShared.ToString() ?? "false";
    //var pilotCall = Model.PilotName;
    //var placeholdLastNa = Model.NameLast ?? "Last Name";
    //var placeholdFirstNa = Model.NameFirst ?? "First Name";
}

<div class="row">
    @Html.Partial("_MemberMenu",new {menuitem=menuitem})
            <br>
            <div class="col-sm-9">
            <form method="POST" role="form" class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PilotID)
            @Html.Hidden("menuitem", menuitem)

                    <div class="form-group">
                        <label for="NameLast" class="col-sm-2 control-label">Last Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control single-line" id="NameLast" name="NameLast" value="@Model.NameLast" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="NameFirst" class="col-sm-2 control-label">First Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="NameFirst" name="NameFirst" value="@Model.NameFirst" placeholder="First Name">
                        </div>
                    </div>
                    @if (msgArpt != null)
                    {
                            <div class="col-sm-offset-2 validation-summary-errors text-danger"> @msgArpt  </div>
                    }
                    <div class="form-group">
                        <label for="BaseAirport" class="col-sm-2 control-label">Base Airport Code</label>
                        <div class="col-sm-8">
                            <small class="form-text text-muted">Please enter at least 3 symbols</small>
                            <input type="text" class="form-control" id="BaseAirport" name="BaseAirport" value="@Model.BaseAirport">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="PilotCode" class="col-sm-2 control-label">Phone</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="PilotCode" name="PilotCode" value="@Model.PilotCode" disabled>
                            @Html.HiddenFor(model => model.PilotCode)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="PilotName" class="col-sm-2 control-label">Callsign</label>
                        <div class="col-sm-8">
                            <small class="form-text text-muted">See Quick Help on the left</small>
                            <input type="text" class="form-control" id="PilotName" name="PilotName" value="@Model.PilotName" disabled>
                            @Html.HiddenFor(model => model.PilotName)
                        </div>
                    </div>
                    <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-8 ">
                                <div class="checkbox" >
                                    <label>
                                        @Html.CheckBoxFor(p=>p.IsShared) Make my new flights public by default
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                <button type="submit" class="btn btn-default">Save Changes</button>
                            </div>
                        </div>

                        <div class="col-sm-offset-2 col-sm-6">
                            @if (successFlg != null)
                            {
                                if ((bool)successFlg)
                                {
                                    <div class="text-success"> @msg  </div>
                                }
                                else if (!(bool)successFlg)
                                {
                                    <div class="validation-summary-errors text-danger"> @msg  </div>
                                }
                            }
                        </div>
  
                </form>

                </div>
                    @*<input type="submit" class="btn btn-default active" value="Save Changes" />*@
                <br>

</div>
<div class="validation-summary-errors">@ViewBag.NotFoundMessage  </div>



