@model MVC_Acft_Track.Models.SearchRequest


@*<div>
    @Html.ActionLink("[__Up__]", "Index", "Home")
</div>*@

@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-10">
            </div>
            <div class="col-md-6">
                                <fieldset>
                                    <h2> Flight Search By:</h2>
                                    <p>
                                        <i>
                                            Only public records are included in the search result.
                                        </i>
                                    </p>

                                    <div class="form-group">
                                        <label for="NameLast" class="col-sm-2 control-label">@Html.LabelFor(model => model.FlightID)</label>
                                        <div>
                                            @Html.EditorFor(model => model.FlightID, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="NameLast" class="col-sm-2 control-label">@Html.LabelFor(model => model.AcftNumLocal)</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.AcftNumLocal, ViewBag.AircraftsSelList as SelectList, "All Aircrafts", new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-condensed">
                                                <tbody>
                                                    <tr> <th scope="row">@Html.LabelFor(model => model.FlightID)</th> <td>@Html.EditorFor(model => model.FlightID, new { htmlAttributes = new { @class = "form-control" }})</td></tr>
                                                    <tr> <th scope="row">@Html.LabelFor(model => model.AcftNumLocal)</th> <td>@Html.DropDownListFor(model => model.AcftNumLocal, ViewBag.AircraftsSelList as SelectList, "Select")</td> </tr>
                                                    <tr> <th scope="row">@Html.LabelFor(model => model.PilotCode)</th> <td>@Html.DropDownListFor(model => model.PilotID, ViewBag.PilotSelList as SelectList, "Select")</td> </tr>
                                                    <tr> <th scope="row">@Html.LabelFor(model => model.FlightDate)</th> <td class="datefield">@Html.EditorFor(model => model.FlightDate) </td> </tr>
                                                </tbody>
                                            </table>
                                        </div>  
                                    <p>
                                        <input type="submit" class="btn btn-default" id="submit" name="submit" value="Search" />
                                    </p>

                                </fieldset>


                <p class="message-error"> @ViewBag.Message</p>
            </div>
        </div>

}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".datepicker").datepicker();
        });
    </script>
}


