@model MVC_Acft_Track.Models.SearchRequest


@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-10">
            </div>
            <div class="col-md-6">
                                <fieldset>
                                    <h2> Flight Search By:</h2>
                                    <p>
                                        <i>
                                            Only public records are included in the search result.
                                        </i>
                                    </p>

                                    <div class="form-group">
                                        <label class="col-md-2">@Html.LabelFor(model => model.FlightID,new { @class = "control-label" })</label>
                                        <div>
                                            @Html.EditorFor(model => model.FlightID, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2">@Html.LabelFor(model => model.AcftNumLocal,new { @class = "control-label" })</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.AcftNumLocal, ViewBag.AircraftsSelList as SelectList,"All Aircrafts", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2">@Html.LabelFor(model => model.PilotCode, new { @class = "control-label" })</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.PilotID, ViewBag.PilotSelList as SelectList, "All Pilots", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2">@Html.LabelFor(model => model.PilotCode, new { @class = "control-label" })</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.PilotID, ViewBag.PilotSelList as SelectList, "All Pilots", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2">@Html.LabelFor(model => model.FlightDate, new { @class = "control-label" })</label>
                                        <div>
                                            @Html.EditorFor(model => model.FlightDate, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>


                                    <p>
                                        <input type="submit" class="btn btn-default" id="submit" name="submit" value="Search" />
                                    </p>

                                </fieldset>


                <p class="message-error"> @ViewBag.Message</p>
            </div>
        </div>

}

