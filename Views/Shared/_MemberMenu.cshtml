        </div>

        <div class="navbar-collapse collapse no-padding-column" id="myNavbar">
            <div class="left-menu">
                <ul class="nav nav-pills nav-stacked">
                    @{ if (menuitem == 1)
                        {
                            <li class="active"><a href="~/Member/IndexMember?menuitem=1">The Pilot</a></li>
                            <li><a href="~/Member/IndexMember?menuitem=2">My Aircrafts</a></li>
                            <li><a href="~/Member/IndexMember?menuitem=3">My Pilot LogBook</a></li>
                            <li><a href="~/Member/IndexMember?menuitem=4">Manage My Flights</a></li>
                        }
                        else if (menuitem == 2)
                        {
                            <li><a href="~/Member/IndexMember?menuitem=1">The Pilot</a></li>
                            <li class="active"><a href="~/Member/IndexMember?menuitem=2">My Aircrafts</a></li>
                            <li><a href="~/Member/IndexMember?menuitem=3">My Pilot LogBook</a></li>
                            <li><a href="~/Member/IndexMember?menuitem=4">Manage My Flights</a></li>
                        }
                        else if (menuitem == 3)
                        {
                            <li><a href="~/Member/IndexMember?menuitem=1">The Pilot</a></li>
                            <li><a href="~/Member/IndexMember?menuitem=2">My Aircrafts</a></li>
