@model MVC_Acft_Track.Models.SearchRequest

@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true)

    <div class="row">
            <div class="col-md-6">
                                <fieldset>
                                    <h2> Flight Search By:</h2><br>

                                    <div class="form-group">
                                        <label class="col-md-3">@Html.LabelFor(model => model.FlightID,new { @class = "control-label" })</label>
                                        <div>
                                            @Html.EditorFor(model => model.FlightID, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3">@Html.LabelFor(model => model.AcftNumLocal,new { @class = "control-label" })</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.AcftNumLocal, ViewBag.AircraftsSelList as SelectList,"Select Aircraft", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3">@Html.LabelFor(model => model.PilotCode, new { @class = "control-label" })</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.PilotID, ViewBag.PilotSelList as SelectList, "Select Pilot", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3">@Html.LabelFor(model => model.GroupName, new { @class = "control-label" })</label>
                                        <div>
                                            @Html.DropDownListFor(model => model.GroupID, ViewBag.GroupSelList as SelectList, "Select Company", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3">@Html.LabelFor(model => model.FlightDate, new { @class = "control-label" })</label>
                                        <div>
                                            @Html.EditorFor(model => model.FlightDate, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="col-md-offset-3">
                                        <p>
                                            <i>Only public records will be included in the search result.</i><br>
                                        </p>                                        
                                        <input type="submit" class="btn btn-default" id="submit" name="submit" value="Search" />
                                    </div>
                                </fieldset>
                                <div class="col-md-offset-3">
                                    <p>
                                        <div class="validation-summary-errors text-danger"> @ViewBag.Message  </div>
                                    </p>
                                </div>

            </div>
        </div>

}

