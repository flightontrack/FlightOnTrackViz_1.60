@model MVC_Acft_Track.Models.Flight

@{
    ViewBag.Title = "Edit";
    var successFlg = ViewBag.successFlg;
    string msg = ViewBag.Msg;
}
<div>
@*    @Html.ActionLink("[Back]", "GetFlights")*@
</div>
<br>
<b>Flight  @Html.DisplayFor(model => model.FlightID)</b>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.FlightID)

    <table class="table table-striped table-condensed">
        <tr>
            <td> Flight Name </td>
            <td>@Html.EditorFor(model => model.FlightName)</td>
        </tr>
        <tr>
            <td>Comments</td>
            <td>@Html.EditorFor(model => model.Comments)</td>
        </tr>
        <tr>
            <td>Aircraft</td>
            <td>@Html.DropDownList("AircraftsSelList")</td>
        </tr>
        <tr>
            <td>Pilot Phone</td>
            <td>@if (ViewBag.selectedPilotID == null) {
                @Html.DropDownList("PhoneSelList","Select")
            }
            else {
                @Html.DropDownList("PhoneSelList") 
            }
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" class="btn btn-default active" value="Save Changes" />
    </p>
    if (successFlg != null)
    {
        if ((bool)successFlg)
        {<i>@msg</i> }
                    else if (!(bool)successFlg)
                    {
            <div class="validation-summary-errors text-danger"> @msg  </div>
        }
    }

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


